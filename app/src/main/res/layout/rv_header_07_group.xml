<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_rv_header_07_recommend1"
        android:layout_width="872px"
        android:layout_height="180px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/tv_rv_header_07_recommend1"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26px"
        android:textColor="#f1f1f1"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="832px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="推荐1"

        />


    <ImageView
        android:id="@+id/iv_rv_header_07_recommend2"
        android:layout_width="872px"
        android:layout_height="180px"
        app:layout_constraintLeft_toRightOf="@+id/iv_rv_header_07_recommend1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/tv_rv_header_07_recommend2"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26px"
        android:textColor="#f1f1f1"

        app:layout_constraintLeft_toLeftOf="@+id/iv_rv_header_07_recommend2"
        android:layout_marginLeft="832px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="推荐2"

        />


</android.support.constraint.ConstraintLayout>