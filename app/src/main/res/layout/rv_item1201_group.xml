<?xml version="1.0" encoding="utf-8"?>
<com.hisense.pagedemo.ui.SelectConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scl_rvitem_1201_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:id="@+id/iv_rvitem_1201_group_goodsimag"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_rvitem_1201_group_price"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:background="@drawable/rv_item_1201_group_bac"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#f1f1f1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rvitem_1201_group_goodsimag"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_1201_group_goodsimag"

        />


    <com.hisense.pagedemo.ui.DeleteLineTextView
        android:id="@+id/tv_rvitem_1201_group_originalprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"

        app:layout_constraintBottom_toTopOf="@+id/tv_rvitem_1201_group_price"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_1201_group_goodsimag"
        app:layout_constraintRight_toRightOf="@+id/iv_rvitem_1201_group_goodsimag"

        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"


        android:textSize="22px"
        android:textColor="#000000"
        android:gravity="start|center_vertical"

        android:background="#a3a3"

        />

    <TextView
        android:id="@+id/tv_rvitem_1201_group_goodsname"
        android:layout_width="0dp"
        android:layout_height="18dp"

        app:layout_constraintTop_toBottomOf="@+id/iv_rvitem_1201_group_goodsimag"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_1201_group_goodsimag"
        app:layout_constraintRight_toRightOf="@+id/iv_rvitem_1201_group_goodsimag"

        android:layout_marginTop="6dp"

        android:textSize="30px"
        android:textColor="#f1f1f1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/tv_common_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_1201_group_goodsimag"
        app:layout_constraintRight_toRightOf="@+id/iv_rvitem_1201_group_goodsimag"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rvitem_1201_group_goodsimag"
        app:layout_constraintTop_toTopOf="@+id/iv_rvitem_1201_group_goodsimag"

        android:visibility="gone"
        android:background="@drawable/rv_item_0801_group_border"
        />
    <View
        android:id="@+id/temp_rv_item_1201"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/iv_rvitem_1201_group_goodsimag"
        android:layout_marginRight="10dp"


        />
    <TextView
        android:id="@+id/tv_rvitem_1201_group_position"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/temp_rv_item_1201"
        app:layout_constraintTop_toTopOf="@+id/iv_rvitem_1201_group_goodsimag"
        android:layout_marginTop="30dp"
        android:background="@drawable/rv_item_1101_group_position"
        android:gravity="center"
        android:textSize="24px"

        />


</com.hisense.pagedemo.ui.SelectConstraintLayout>