<?xml version="1.0" encoding="utf-8"?>
<com.hisense.pagedemo.ui.SelectConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scl_rvitem_0801_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_rvitem_0901_group_portrait"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        />



    <TextView
        android:id="@+id/tv_rvitem_0901_group_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:textColor="#f1f1f1"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_0901_group_portrait"


        app:layout_constraintRight_toRightOf="@+id/iv_rvitem_0901_group_portrait"
        app:layout_constraintTop_toBottomOf="@+id/iv_rvitem_0901_group_portrait" />


    <TextView
        android:id="@+id/tv_rvitem_0901_group_role"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="36dp"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:textColor="#99f1f1f1"
        android:textSize="24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_0901_group_portrait"

        app:layout_constraintRight_toRightOf="@+id/iv_rvitem_0901_group_portrait"
        app:layout_constraintTop_toBottomOf="@+id/tv_rvitem_0901_group_name" />

    <View
        android:id="@+id/tv_common_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rv_item_0901_group_border"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rvitem_0901_group_portrait"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_0901_group_portrait"


        app:layout_constraintRight_toRightOf="@+id/iv_rvitem_0901_group_portrait"
        app:layout_constraintTop_toTopOf="@+id/iv_rvitem_0901_group_portrait" />


    <TextView
        android:id="@+id/tv_rvitem_0901_group_position"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rv_item_0901_group_position"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:textColor="#055c66"
        android:textSize="24px"

        app:layout_constraintLeft_toLeftOf="@+id/iv_rvitem_0901_group_portrait"
        app:layout_constraintTop_toTopOf="@+id/iv_rvitem_0901_group_portrait" />


</com.hisense.pagedemo.ui.SelectConstraintLayout>